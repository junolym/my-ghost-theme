{{! -- Add Pagination -- }}

<nav class="pagination-nav clear" role="navigation">
    {{#if prev}}
        <a class="newer-posts btn btn-primary" href="{{page_url prev}}"><i class="i-back"></i> {{t "Newer Posts"}}</a>
    {{/if}}
    <span class="page-number">{{t "Page"}} {{page}} {{t "of"}} {{pages}}</span>
    {{#if next}}
        <a class="older-posts btn btn-primary" href="{{page_url next}}">{{t "Older Posts"}} <i class="i-forward"></i></a>
    {{/if}}
</nav>
